<h1>Search#index</h1>
<p>Find me in app/views/search/index.html.erb</p>
<%= form_tag({:action => 'upload'}, :multipart => true) do %>
  <label for="upload_datafile">Выберите файл</label>
  <br>
  <%= file_field 'upload', 'datafile' %>
  <br>
  <br>
  <label for="upload_search_word">Слово для поиска</label>
  <br>
  <%= text_field 'upload', 'search_word' %>
  <br>
  <br>
  <%= submit_tag "Загрузить" %>
<% end %>

<h1>Состояние задачи:</h1>
<p><%= button_to "Обновить", { :action => :status}, :method => :get %></p>
<% if @session_status != nil %>
  <p>Время запуска: <%= @session_status.time %></p>
  <p>Процент выполнения: <%= @session_status.pct_complete %></p>
  <p>Статус: <%= @session_status.status %></p>
  <p>Сообщение: <%= @session_status.message %></p>
<% end %>
